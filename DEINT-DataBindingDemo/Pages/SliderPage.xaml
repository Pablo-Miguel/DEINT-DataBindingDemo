<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DEINT_DataBindingDemo.Pages.SliderPage"
             Title="SliderPage">
    <VerticalStackLayout VerticalOptions="Center" Spacing="100" Margin="50">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Rotation="{Binding Source={x:Reference slider}, Path=Value}" />
        
        <Slider x:Name="slider" Minimum="0" Maximum="360" />
    
    </VerticalStackLayout>
</ContentPage>